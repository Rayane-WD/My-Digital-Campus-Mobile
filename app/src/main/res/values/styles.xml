<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    Login page style    -->
    <style name="Editext_loginpage" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">#30FFFFFF</item>
        <item name="android:drawablePadding">20dp</item>
    </style>


    <!--    fragment schedule style    -->
    <style name="Day_string" parent="TextAppearance.AppCompat">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
    </style>


    <style name="hour_string" parent="TextAppearance.AppCompat">
        <item name="android:background">#fff6d6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="course_string" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/round_corner_view_course</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
    </style>
    
    
</resources>